# .env.example

# === Docker Settings ===
# Версии образов
PYTHON_VERSION=3.11
NODE_VERSION=20

# Порты
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === PostgreSQL ===
POSTGRES_DB=raffle_web3
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
PGDATA=/var/lib/postgresql/data/pgdata

# === Redis ===
REDIS_PASSWORD=your_redis_password_here

# === Backend ===
# Database connection
DATABASE_URL=postgresql://postgres:your_strong_password_here@postgres:5432/raffle_web3
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# App settings
ENVIRONMENT=production
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_at_least_32_characters_long

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
ADMIN_USER_ID=123456789

# === TON Blockchain ===
# Адрес кошелька для приема платежей
RAFFLE_WALLET_ADDRESS=UQxxxx...
# Мнемоническая фраза кошелька (24 слова)
RAFFLE_WALLET_MNEMONIC=word1 word2 word3 ... word24
# TON Center API
TON_CENTER_API_KEY=your_toncenter_api_key

# === Random.org ===
RANDOM_ORG_API_KEY=your_random_org_api_key

# === Raffle Configuration ===
# Express
EXPRESS_MIN_PARTICIPANTS=5
EXPRESS_ENTRY_FEE=1.0
EXPRESS_TIMER_MINUTES=1

# Standard
STANDARD_MIN_PARTICIPANTS=10
STANDARD_ENTRY_FEE=2.0
STANDARD_TIMER_MINUTES=2

# Premium
PREMIUM_MIN_PARTICIPANTS=30
PREMIUM_ENTRY_FEE=5.0
PREMIUM_TIMER_MINUTES=5

# Комиссия (10%)
COMMISSION_PERCENT=10.0

# === Frontend (Vue.js) ===
VITE_PORT=5173
VITE_API_URL=https://your-backend.com/api/v1
VITE_WS_URL=wss://your-backend.com/ws
VITE_RAFFLE_WALLET=UQxxxx...
VITE_TON_MANIFEST_URL=https://your-domain.com/tonconnect-manifest.json

# === Security ===
CORS_ORIGINS=https://your-miniapp-domain.com,https://your-production-domain.com
